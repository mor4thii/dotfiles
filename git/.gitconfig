[color]
	ui = auto

[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore

[fetch]
	prune = true

[includeIf "gitdir:~/Documents/code/work/"]
	path = ~/Documents/code/work/.gitconfig

[init]
	defaultBranch = main

[merge]
	conflictstyle = merge

[pull]
	rebase = true

[push]
	default = simple

